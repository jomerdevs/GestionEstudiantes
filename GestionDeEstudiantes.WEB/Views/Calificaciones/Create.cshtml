@model GestionDeEstudiantes.WEB.Entities.Calificaciones

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center my-3">Agregar calificación</h2>

<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4 bg-info p-5 rounded-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input class="form-control" value="@ViewData["Code"]" disabled/>
                <input asp-for="Codigo" type="hidden" value="@ViewData["Code"]" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdMateria" class="control-label"></label>
                <select asp-for="IdMateria" class ="form-control" asp-items="ViewBag.idMateria"></select>
            </div>            
            <div class="form-group">
                <label class="control-label">Año Escolar</label>
                <input asp-for="AnoEscolar" class="form-control" value="@DateTime.Now.Year" />
                <span asp-validation-for="AnoEscolar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-success my-3" />
            </div>
        </form>
        <div>
            <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
